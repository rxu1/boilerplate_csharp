@model Wedding
<div class="container-fluid">
  <div class="row">
    <div class="col-md-6">
      <h1>Plan your Wedding</h1>
    </div>
    <div class="col-md-6">
      <a href="/dashboard" class="btn btn-primary">Dashboard</a> 
      <a href="/logout" class="btn btn-secondary">Logout</a>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <form asp-action="CreateWedding" asp-controller="Dashboard" style="display: inline-block" method="post">
        <div class="form-group">
          <span asp-validation-for="WedderOne" class="text-danger"></span><br>
          <label asp-for="WedderOne" class="form-horizontal">Wedder One</label>
          <input type="text" class="form-horizontal" asp-for="WedderOne">
        </div>
        <div class="form-group">
          <span asp-validation-for="WedderTwo" class="text-danger"></span><br>
          <label asp-for="WedderTwo" class="form-horizontal">Wedder Two</label>
          <input type="text" class="form-horizontal" asp-for="WedderTwo">
        </div>
        <div class="form-group">
          <span asp-validation-for="WeddingDate" class="text-danger"></span><br>
          <label asp-for="WeddingDate" class="form-horizontal">Wedding Date</label>
          <input type="date" class="form-horizontal" asp-for="WeddingDate">
        </div>
        <div class="form-group">
          <span asp-validation-for="WeddingAddress" class="text-danger"></span><br>
          <label asp-for="WeddingAddress" class="form-horizontal">Wedding Address</label>
          <input type="text" class="form-horizontal" asp-for="WeddingAddress">
        </div>
        <button class="btn btn-primary">Create!</button>
      </form>
    </div>
  </div>
</div>